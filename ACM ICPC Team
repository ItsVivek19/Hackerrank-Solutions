#include <iostream>
#include <vector>
#include <string>
using namespace std;

vector<int> acmTeam(vector<string> topic) {
    int n = topic.size();
    int m = topic[0].size();
    int maxTopics = 0;
    int teamsCount = 0;

    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            int topicsKnown = 0;
            for (int k = 0; k < m; k++) {
                if (topic[i][k] == '1' || topic[j][k] == '1')
                    topicsKnown++;
            }
            if (topicsKnown > maxTopics) {
                maxTopics = topicsKnown;
                teamsCount = 1;
            }
            else if (topicsKnown == maxTopics) {
                teamsCount++;
            }
        }
    }
    return {maxTopics, teamsCount};
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, m;
    cin >> n >> m;
    vector<string> topic(n);
    for (int i = 0; i < n; i++) {
        cin >> topic[i];
    }

    vector<int> result = acmTeam(topic);
    cout << result[0] << "\n" << result[1] << "\n";

    return 0;
}
