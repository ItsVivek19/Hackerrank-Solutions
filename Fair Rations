#include <iostream>
#include <vector>
using namespace std;

string fairRations(vector<int>& B) {
    int count = 0;
    int n = B.size();
    for (int i = 0; i < n - 1; ++i) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i + 1]++;
            count += 2;
        }
    }
    return (B[n - 1] % 2 == 0) ? to_string(count) : "NO";
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;
    vector<int> B(n);
    for (int i = 0; i < n; ++i) {
        cin >> B[i];
    }
    cout << fairRations(B) << "\n";
    return 0;
}
