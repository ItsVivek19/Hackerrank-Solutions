#include <bits/stdc++.h>
using namespace std;

vector<int> jimOrders(vector<vector<int>> orders) {
    int n = orders.size();
    vector<pair<int, int>> serveTime; // {serve_time, customer_number}
    
    for (int i = 0; i < n; i++) {
        int orderTime = orders[i][0];
        int prepTime = orders[i][1];
        int deliveryTime = orderTime + prepTime;
        serveTime.push_back({deliveryTime, i + 1}); // i+1 because customer numbers start at 1
    }

    // Sort primarily by delivery time, secondarily by customer number
    sort(serveTime.begin(), serveTime.end());

    vector<int> result;
    for (auto &p : serveTime)
        result.push_back(p.second);

    return result;
}

int main() {
    int n;
    cin >> n;
    vector<vector<int>> orders(n, vector<int>(2));

    for (int i = 0; i < n; i++) {
        cin >> orders[i][0] >> orders[i][1];
    }

    vector<int> result = jimOrders(orders);

    for (int i = 0; i < result.size(); i++) {
        cout << result[i];
        if (i != result.size() - 1) cout << " ";
    }

    return 0;
}
