#include <iostream>
#include <vector>
using namespace std;

void minimumBribes(const vector<int>& q) {
    int totalBribes = 0;
    int n = q.size();
    for (int i = 0; i < n; ++i) {
        if (q[i] - (i + 1) > 2) {
            cout << "Too chaotic" << endl;
            return;
        }
        // Check only the range from max(0, q[i]-2) up to i for possible bribes
        for (int j = max(0, q[i] - 2); j < i; ++j) {
            if (q[j] > q[i]) {
                totalBribes++;
            }
        }
    }
    cout << totalBribes << endl;
}

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> q(n);
        for (int i = 0; i < n; ++i)
            cin >> q[i];
        minimumBribes(q);
    }
    return 0;
}
