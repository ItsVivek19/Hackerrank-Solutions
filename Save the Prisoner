#include <bits/stdc++.h>
using namespace std;

int saveThePrisoner(int n, int m, int s) {
    int result = (s - 1 + m - 1) % n + 1;
    return result;
}

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n, m, s;
        cin >> n >> m >> s;
        cout << saveThePrisoner(n, m, s) << endl;
    }
    return 0;
}
