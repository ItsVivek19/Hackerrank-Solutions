#include <stdio.h>
#include <stdlib.h>

// Compare function for ascending order (for A)
int compareAsc(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

// Compare function for descending order (for B)
int compareDesc(const void *a, const void *b) {
    return (*(int*)b - *(int*)a);
}

// Function to check if permutation exists
char* twoArrays(int k, int A[], int B[], int n) {
    // Sort A ascending
    qsort(A, n, sizeof(int), compareAsc);
    // Sort B descending
    qsort(B, n, sizeof(int), compareDesc);

    // Check if every pair satisfies A[i] + B[i] >= k
    for (int i = 0; i < n; i++) {
        if (A[i] + B[i] < k)
            return "NO";
    }

    return "YES";
}

int main() {
    int q;
    scanf("%d", &q); // Number of queries

    while (q--) {
        int n, k;
        scanf("%d %d", &n, &k);

        int A[n], B[n];

        // Read array A
        for (int i = 0; i < n; i++)
            scanf("%d", &A[i]);

        // Read array B
        for (int i = 0; i < n; i++)
            scanf("%d", &B[i]);

        printf("%s\n", twoArrays(k, A, B, n));
    }

    return 0;
}
